<div class="container content">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
      <div class="reg-header">
        <h2>Modifier votre profil
        <p><%= link_to "Mon dashboard", :back %></p></h2>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, label: false %>
        <%= f.input :first_name, required: true, autofocus: true, label: false %>
        <%= f.input :last_name, required: true, autofocus: true, label: false %>
        <%= f.input :phone_number, required: true, autofocus: true, label: false %>
        <%= f.input :current_password, hint: "Pour valider, merci d'entrer votre mot de passe actuel", required: true, label: false,placeholder: 'Password' %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
        <h2> Modifier votre mot de passe </h2>
        <%= f.input :password, autocomplete: "off", hint: "Rentrez votre nouveau mot de passe", required: false %>
        <%= f.input :password_confirmation, required: false, hint: "Confirmez votre nouveau mot de passe" %>

      </div>

      <div class="form-actions">
      <button class="btn-u pull-right" type="submit">Update</button>
      </div>
      <% end %>

    </div>
  </div>
</div>
</div>




