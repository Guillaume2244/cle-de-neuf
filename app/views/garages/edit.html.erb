<div class="col-xs-12 col-md-4 col-md-offset-4">

  <%= simple_form_for @garage do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, as: :hidden %>
  <%= f.input :siret, as: :hidden %>
  <%= f.input :address, as: :hidden %>
  <%= f.input :city, as: :hidden %>
  <%= f.input :zip_code, as: :hidden %>
  <%= f.input :phone_number, as: :hidden %>
  <%= f.input :registration_plate, required: true %>
  <%= f.input :token, required: true %>

  <div class="form-actions">
    <%= f.button :submit, "Update!" %>
  </div>
  <% end %>

</div>
